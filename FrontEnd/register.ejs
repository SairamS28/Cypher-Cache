<%-include('Partials/Head.ejs')%>
    <style>
        .bg-img {
            background-image: url("blue-snow.png")
        }
    </style>

    <body class="bg-img">
        <div class="max-w-screen-2xl flex justify-center items-center h-screen">
            <div class="bg-white p-8 rounded-xl shadow-lg">
                <div class="pb-4">
                    <h1 class="font-bold text-3xl text-blue-500 text-center">Register</h1>
                </div>
                <div class="p-4">
                    <form action="" method="post" class="flex flex-col">
